{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./prisma"],
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "prisma/**/*.ts", "prod.ts"],
  "exclude": ["node_modules"]
}
